/* CUSTOM STORY STYLE */
.article
  font-family "Georgia", "Times", "Times New Roman", serif;
  font-size: 1rem;
  line-height: 1.5;

.opening__title
  text-align center
  padding-top 1rem
  height 5rem
  width 100%

p
  margin 0.6rem 0

.select__div
  width 100%
  //height 100%
  min-height 250px
  text-align center
  vertical-align middle
  background-image url("assets/images/1.jpg")
  background-position center
  background-repeat no-repeat
  background-size cover
  & p
    color #e05b43
    background-color rgba(255, 255, 255, 0.8)
    padding 1rem 0
    position absolute
    bottom 0px
    width 100%
    font-family "Grifo", "Georgia", "Times", "Times New Roman", serif;

.site-header
  align-items: flex-end;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 1.5rem 2rem;
  width: 100%;
  text-decoration none
  border-bottom none

.title__game
  font-family "Grifo-Bold", "Georgia", "Times", "Times New Roman", serif;
  font-size 3.5rem

.icon-color
  fill #e05b43

a.site-header
  margin 0 auto


a {
  color: #333;
  text-decoration: none;
  transition: 0.2s ease-in-out all;
}

.overline
  display: inline-block;
  font-family: "Moderat", -apple-system, BlinkMacSystemFont, "Avenir Next", "Avenir", "Segoe UI", "Lucida Grande", "Helvetica Neue", "Helvetica", "Fira Sans", "Roboto", "Noto", "Droid Sans", "Cantarell", "Oxygen", "Ubuntu", "Franklin Gothic Medium", "Century Gothic", "Liberation Sans", sans-serif;
  font-size: 0.9rem;
  font-weight: 700;
  //text-transform: uppercase;

.card_model
  margin-top 10vh
  width 100vw
  //max-height 80vh
  //animation slide 1s ease

  & .card__content
    text-align center
    padding 2rem
    @media screen and (max-width: 750px)
      padding 1rem

.card__image
  width 90%
  height auto
  margin auto
  @media screen and (max-width: 750px)
    width 100%
    height 50vh
  @media screen and (max-width: 450px)
    width auto
    height 50vh

a.btn--secondary
  background-color #e05b43
  border 1px solid transparent
  color #fdfdfc
  padding 0rem 1rem
  & .btn__p
    font-size 0.8rem
    margin 0.6rem 0

.card__content a.btn--primary
  background-color #e05b43
  border 1px solid transparent
  color #fdfdfc
  padding 0.5rem 1.5rem
  margin-top 1rem

  &:hover
    background-color #fdfdfc
    border-color #e05b43
    box-shadow 5px 5px 0 0 #e05b43
    color #333

  & .btn__p
    margin 0px
    font-size 0.8rem

.verticalDiv
  margin-top auto
  margin-bottom auto

.hide
  display none

.row
  margin-left 0
  margin-right 0

.card_model.show
  animation scale-display .4s

.card_model.hide
  animation scale-display--reversed .4s
  animation-fill-mode forwards


@keyframes scale-display {
  0% {
    opacity: 0;
    transform: translateY(0)
  }
  100% {
    opacity: 1;
    transform: translateY(1000)
  }
}
@keyframes scale-display--reversed {
  0% {
    display: block;
    opacity: 1;
    transform: translateY(1000)
  }
  99% {
    display: block;
    opacity: 0;
    transform: translateY(0)
  }
  100% {
    display: none;
    opacity: 0;
    transform: translateY(0)
  }
}
.img__credit, .img__caption
  width 90%
  font-size 0.75rem
  margin 0.1rem auto 0 auto
  font-family: "Moderat", "Roboto", sans-serif;

#all-steppers
  text-align center

.stepper
  width 8px
  height 8px
  border-radius 4px
  border 1px solid #e05b43
  display inline-block
  margin-left 8px
  margin-right 8px
  cursor pointer


.stepper.stepper-active
  background-color #e05b43

a.stepper__a
  border-bottom hidden

.character
  padding 1rem
  margin-top 1rem

.line-processor, .line-processor-bg
  height 9px
  position absolute
  bottom 3rem

.line-processor
  width 0%
  background-color #e05b43
  transition width 0.2s ease-in

.line-processor-bg
  background-color #ededed
  width 100%